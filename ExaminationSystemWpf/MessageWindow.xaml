<Window x:Class="ExaminationSystemWpf.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExaminationSystemWpf"
        mc:Ignorable="d"
     Title="MessageWindow" Height="250" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False">
    <StackPanel>
        <Grid DockPanel.Dock="Top" x:Name="PanelHeader" VerticalAlignment="Top" Height="60" Background="#FF058306" >
            <Image Source="/Images/icons_closed.png"  Width="30px" HorizontalAlignment="Right" Margin="10 0" MouseDown="Image_MouseDown"/>
        </Grid>
        <TextBlock x:Name="message" Foreground="#FF058306" FontSize="12px" FontFamily="Thoma" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button x:Name="btnok" Foreground="White" Background="#FF058306" Content="OK" FontSize="30px" Width="100px" Margin="20px" HorizontalAlignment="Center" Click="Btnok_Click"></Button>
    </StackPanel>
</Window>
